{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES6", "DOM"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "babel.config.js",
    "index.js",
    "jest.config.js",
    "metro.config.js",
    "react-native.config.js",
    "dist"
  ]
}
